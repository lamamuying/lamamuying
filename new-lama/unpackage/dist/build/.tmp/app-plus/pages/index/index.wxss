.place {

  margin-top: var(--status-bar-height);

  height: 100rpx;
}

.status {
  width: 100%;
  height: 0;

  height: var(--status-bar-height);

  background-color: #ff4965;
  position: fixed;
  top: 0;
  z-index: 999;
}
.swiper-view .swiper {
  width: 100%;
  height: 360rpx;
}
.swiper-view .swiper image {
    width: 100%;
    height: 360rpx;
}
.swiper-view .keep-out {
  width: 100%;
  height: 30rpx;
  border-radius: 100% 100% 0 0;
  margin-top: -15rpx;
  position: absolute;
}
.notice_bg {
  width: 15%;
  margin-left: 10rpx;
  padding-top: 10rpx;
  overflow: hidden;
}
.notice_bg ._img {
  width: 100%;
}
.notice_content {
  width: 75%;
  height: 50rpx;
  font-size: 28rpx;
  margin-right: 5%;
  overflow: hidden;
  margin-top: 10rpx;
  padding-left: 20rpx;
}
.uni-swiper-msg {
  padding: 0 !important;
}
/* 首页分段器 */
.home-header-cate {
  width: 100%;
  height: 84rpx;
  background: #FFF;
  border-bottom: 2px solid #F0F0F0;
  z-index: 1;
  left: 0;
}
.home-tab-title {
  white-space: nowrap;
  text-align: center;
}
.home-tab-title view {
  width: auto;
  height: 80rpx;
  padding: 0 12px;
  margin: 0 8px;
  line-height: 84rpx;
  display: inline-block;
  text-align: center;
  font-size: 30rpx;
}
.home-tab-title view:first-child {
  margin-left: 0;
}
.home-tab-title view:last-child {
  margin-right: 0;
}
.home-tab-current {
  border-bottom: 2px solid #DE533A !important;
  color: #DE533A;
}
.scroll-view_H {
  white-space: nowrap;
  width: 100%;
}
.home_conter {
  -webkit-box-pack: center !important;
  -webkit-justify-content: center !important;
      -ms-flex-pack: center !important;
          justify-content: center !important;
}

