  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  margin-top: 20rpx;
  background: #FF7D91;
  border-radius: 10rpx;
}
.container .haveCard .flex-item image {
  margin: 0 20rpx;
  width: 70rpx;
  height: 70rpx;
}
.container .haveCard .flex-item .info {
  width: 80%;
  height: 200rpx;
}
