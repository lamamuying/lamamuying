.container {
  padding: 20rpx;
  padding-bottom: 0;
  background: #fff;
}
.container .haveCard {
  width: 100%;
}
.container .haveCard .flex-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
