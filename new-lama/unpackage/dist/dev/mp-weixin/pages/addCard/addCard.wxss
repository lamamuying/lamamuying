  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #ececec;
  line-height: 80rpx;
}
.container .addCard image {
  margin: 0 20rpx;
  width: 70rpx;
  height: 70rpx;
}
.container .addCard .text {
  font-size: 34rpx;
  color: #999;
  font-weight: 400;
}

