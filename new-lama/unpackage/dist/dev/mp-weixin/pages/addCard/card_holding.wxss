.container {
  width: 100%;
  height: 100vh;
  background: #EDEDED;
}
.container .holdingPs {
  width: 100%;
  border-top: 2rpx solid #E0E0E0;
  color: #9D9D9D;
  font-size: 28rpx;
  padding: 20rpx 0 0 30rpx;
}
.container .flex-item {
  background: #fff;
  margin-bottom: 20rpx;
  padding: 20rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
      -ms-flex-pack: start;
          justify-content: flex-start;
}
.container .flex-item .cardPerson {
  border-bottom: 2rpx solid #EBEBEB;
  height: 100rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
      -ms-flex-pack: justify;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
}
.container .flex-item .cardPerson .personal {
  width: 18%;
  text-align: left;
  margin: 0 20rpx;
  font-size: 32rpx;
  color: #4A4A4A;
}
.container .flex-item .cardPerson .name {
  width: 80%;
  height: 50rpx;
  font-size: 32rpx;
}
.container .flex-item .cardPerson .name uni-input {
  height: 70rpx;
}
.container .flex-item .cardPerson:last-child {
  border: none;
}
.container .btn {
  margin-top: 50rpx;
  width: 80%;
  background: #ff4965;
  color: #fff;
  font-size: 34rpx;
}

