.content {
  height: 100vh;
}
.content .banner {
  width: 80%;
  margin: 0 8%;
  margin-top: 15%;
  padding: 10rpx 20rpx;
  background-color: #fff;
}
.content .banner .user {
  padding: 20rpx 0;
}
.content .banner .user image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
}
.content .banner .user .name {
  margin-left: 5%;
}
.content .banner .user .name .plus {
  width: 120rpx;
  height: 50rpx;
  line-height: 50rpx;
  background: #ff4965;
  color: #fff;
  margin-top: 10rpx;
  font-size: 24rpx;
  text-align: center;
  border-radius: 10rpx;
}
.content .banner .img {
  width: 500rpx;
  margin: 20rpx auto;
}
.content .banner .img image {
  width: 100%;
  height: 100%;
}
.content .banner .code {
  width: 100%;
  text-align: center;
}

