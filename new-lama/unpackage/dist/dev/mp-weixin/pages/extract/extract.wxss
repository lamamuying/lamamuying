
.uni-drawer {
	display: block;
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	overflow: hidden;
	visibility: hidden;
	z-index: 998;
	height:100%;
}
.uni-drawer>.uni-drawer-mask {
	display: block;
	position: absolute;
	top: 0;
	left: 0;
	bottom: 0;
	width: 100%;
	background: rgba(0, 0, 0, 0.4);
}
.uni-drawer>.uni-drawer-content {
	display: block;
	position: absolute;
	bottom: 0;
	left: 0;
	width: 100%;
	height: 100%;
	-webkit-transition: all 0.3s ease-out;
	-o-transition: all 0.3s ease-out;
	transition: all 0.3s ease-out;
	-webkit-transform: translatey(100%);
	    -ms-transform: translatey(100%);
	        transform: translatey(100%);
}
.uni-drawer.uni-drawer-down>.uni-drawer-content {
	top: auto;
	bottom: 0;
	-webkit-transform: translatey(-100%);
	    -ms-transform: translatey(-100%);
	        transform: translatey(-100%);
}
.uni-drawer.uni-drawer-visible {
	visibility: visible;
}
.uni-drawer.uni-drawer-visible>.uni-drawer-mask {
	display: block;
}
.uni-drawer.uni-drawer-visible>.uni-drawer-content {
	-webkit-transform: translatey(0);
	    -ms-transform: translatey(0);
	        transform: translatey(0);
}

